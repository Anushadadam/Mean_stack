<div class="container">
    <h2>Delete Person</h2>

    <div class="card">
        <div class="card-body">
            <h3 class="card-title">Are you sure you want to delete this person?</h3>
            <div class="card-text">
                <p><strong>Name:</strong>
                    <%= person.name %>
                </p>
                <p><strong>Age:</strong>
                    <%= person.age %>
                </p>
                <p><strong>Gender:</strong>
                    <%= person.gender %>
                </p>
                <p><strong>Mobile Number:</strong>
                    <%= person.mobileNumber %>
                </p>
            </div>

            <form id="delete-form" action="/person/<%= person._id %>" method="POST">
                <input type="hidden" name="_method" value="DELETE">
                <div class="d-flex gap-2 mt-3">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a href="/person" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>